<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/javascripts/color-modes.js"></script>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" />
    <link href="/stylesheets/bootstrap-icons.min.css" rel="stylesheet" />
    <script src="/javascripts/bootstrap.bundle.min.js"></script>
    <title>User Home page</title>
  </head>
  <body>
    <% include ../partial/navbar %>
    <div class="container mt-5">
      <div class="row mt-5 mh-100">
        <div class="col-sm-12 col-md-12 col-lg-2 mt-5"></div>
        <div class="col-sm-12 col-md-12 col-lg-8 border border-2 mt-5">
          <h1 class="text-center mt-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="128"
              height="128"
              fill="blueviolet"
              class="bi bi-person-circle"
              viewBox="0 0 16 16"
            >
              <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
              <path
                fill-rule="evenodd"
                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
              />
            </svg>
          </h1>
          <h3 class="mt-3 text-center text-primary"><%= user.name %></h3>
          <h5 class="mt-1 text-center"><%= user.email %></h5>
          <h6 class="mt-1 text-center">
            Current Workout : <%= user.activeWorkout ? user.activeWorkout.title
            : '' %>
          </h6>
          <h6 class="mt-1 text-center">Current Day : <%= user.currentDay %></h6>
          <div class="d-grid gap-2 col-sm-8 col-md-6 col-lg-4 mx-auto my-2">
            <button
              class="text-center btn btn-outline-danger rounded-pill"
              onclick="resetBtn()"
            >
              Reset Workout
            </button>
          </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-2 mt-5"></div>
      </div>
    </div>
    <% include ../partial/footer2 %>
  </body>
  <script src="/javascripts/jquery-3.7.0.min.js"></script>
  <script>
    function resetBtn() {
      var opt = confirm("Are you for delete?");
      if (opt) {
        $.ajax("/users/reset", {
          type: "POST",
          data: {},
          success: function (result) {
            if (result.status) {
              location.reload();
            } else {
              alert("Something was wrong");
            }
          },
        });
      }
    }
  </script>
</html>
